            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
        <padding>
            <Insets left="40.0" />
        </padding>

        <!-- Add more fields as needed -->
    </GridPane>
    <Button onAction="#saveChanges" styleClass="add" stylesheets="@css/styles.css" text="Save">
        <VBox.margin>
            <Insets bottom="15.0" />
        </VBox.margin></Button>
